{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    "docker:enableMajor",
    ":label(renovate/{{depName}})",
    "security:openssf-scorecard",
    "github>joryirving/renovate-config",
    "github>joryirving/renovate-config:autoMerge"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "description": ["Process container versions"],
      "fileMatch": ["(^|/)containers/.+\\.container$"],
      "matchStrings": ["Image=(?<depName>\\S+):(?<currentValue>.*?)"],
      "datasourceTemplate": "docker"
    }
  ]
}